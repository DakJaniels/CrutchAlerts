<GuiXml>
    <Controls>
<!-- ======================================================================================================================= -->
        <TopLevelControl name="CrutchAlertsCausticCarrion" clampedToScreen="true" mouseEnabled="true" movable="true" hidden="false">
            <Dimensions x="240" y="30"/>
            <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER" offsetX="500" offsetY="0"/>
            <OnMoveStop>
                CrutchAlerts:SavePosition() -- TODO
            </OnMoveStop>
            <Controls>
                <StatusBar name="$(parent)Bar" orientation="HORIZONTAL" hidden="false" value="4.6" layer="1" level="2">
                    <Dimensions x="320" y="30"/>
                    <AnchorFill/>
                    <Limits min="0" max="10"/>
                    <Controls>
                        <Backdrop name="$(parent)Backdrop" centerColor="AA000000" edgeColor="AA000000" layer="1" level="0">
                            <Anchor point="TOPLEFT" offsetX="-2" offsetY="-2"/>
                            <Anchor point="BOTTOMRIGHT" offsetX="2" offsetY="2"/>
                            <Edge edgeSize="2"/>
                        </Backdrop>
                    </Controls>
                    <OnInitialized>
                        ZO_StatusBar_SetGradientColor(self, ZO_XP_BAR_GRADIENT_COLORS)
                        self.gloss = self:GetNamedChild("Gloss")
                        CrutchAlerts.AddCarrionBarNotches()
                    </OnInitialized>
                </StatusBar>
                <!-- <Backdrop name="$(parent)Notch" centerColor="FFFFFFFF" edgeColor="88000000" layer="2">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Bar" relativePoint="TOP" offsetX="-1" offsetY="-2"/>
                    <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)Bar" relativePoint="BOTTOM" offsetX="1" offsetY="2"/>
                </Backdrop>
                <Label name="$(parent)Five" font="$(BOLD_FONT)|20|soft-shadow-thick" color="CCCCCC" text="5" verticalAlignment="TOP" horizontalAlignment="CENTER" hidden="false">
                    <Dimensions x="20" y="20"/>
                    <Anchor point="BOTTOM" relativeTo="$(parent)Notch" relativePoint="TOP" offsetY="-6"/>
                </Label> -->
                <Label name="$(parent)Text" font="ZoFontGame" color="CCCCCC" text="Individual Stacks" verticalAlignment="TOP" horizontalAlignment="LEFT" hidden="false">
                    <Dimensions x="500" y="600"/>
                    <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="BOTTOMLEFT" offsetY="20"/>
                </Label>
                <Label name="$(parent)Title" font="$(BOLD_FONT)|20|soft-shadow-thick" color="FFFFFF" text="Group Carrion" verticalAlignment="TOP" horizontalAlignment="LEFT" hidden="false">
                    <Dimensions x="500" y="600"/>
                    <Anchor point="BOTTOMLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetY="-6"/>
                    <OnInitialized>
                        self:SetHeight(self:GetTextHeight())
                    </OnInitialized>
                </Label>
            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>
